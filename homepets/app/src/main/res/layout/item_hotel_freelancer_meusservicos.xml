<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
android:background="@drawable/shadow_item">

    <TextView
        android:id="@+id/txt_servico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Serviço:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sourcesansprobold"/>

    <TextView
        android:id="@+id/txt_nomeServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_servico"
        android:layout_marginTop="5dp"
        android:layout_alignBaseline="@id/txt_servico"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <TextView
        android:id="@+id/txt_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_servico"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:text="Preço:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sourcesansprobold"/>

    <TextView
        android:id="@+id/txt_precoServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/txt_preco"
        android:layout_alignBaseline="@id/txt_preco"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <TextView
        android:id="@+id/txt_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_servico"
        android:layout_margin="5dp"
        android:text="Tipo de Preço:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sourcesansprobold"/>

    <TextView
        android:id="@+id/txt_tipoPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_tipo"
        android:layout_alignBaseline="@id/txt_tipo"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/input_currency"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/servicoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>