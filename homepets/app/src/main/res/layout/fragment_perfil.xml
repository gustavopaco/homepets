<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.PerfilFragment"
    android:layout_margin="10dp"
    android:background="@drawable/shadow_item">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/dados_do_usuario"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"/>

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginLeft="20dp"
        android:text="Nome:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <EditText
        android:id="@+id/input_nomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_nome"
        android:layout_toRightOf="@id/txt_nome"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nome"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"
        android:text="E-mail:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <EditText
        android:id="@+id/input_emailUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_email"
        android:layout_toRightOf="@id/txt_email"
        android:layout_marginLeft="5dp"
        android:enabled="false"
        android:layout_marginRight="50dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

<!--   ................................................................-->

    <TextView
        android:id="@+id/txt_senhaAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="20dp"
        android:text="Senha Atual:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <EditText
        android:id="@+id/input_senhaAtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_senhaAtual"
        android:layout_toRightOf="@id/txt_senhaAtual"
        android:layout_marginLeft="25dp"
        android:inputType="textWebPassword"
        android:maxLength="12"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:hint="min 5 e maximo 12 caracteres"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>


    <TextView
        android:id="@+id/txt_novaSenha1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_senhaAtual"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="20dp"
        android:text="Nova Senha:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <EditText
        android:id="@+id/input_novaSenha1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_novaSenha1"
        android:layout_toRightOf="@id/txt_novaSenha1"
        android:layout_marginLeft="28dp"
        android:inputType="textWebPassword"
        android:maxLength="12"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:hint="min 5 e maximo 12 caracteres"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <TextView
        android:id="@+id/txt_novaSenha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_novaSenha1"
        android:layout_marginLeft="20dp"
        android:text="Repita a Senha:"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <EditText
        android:id="@+id/input_novaSenha2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_novaSenha2"
        android:layout_toRightOf="@id/txt_novaSenha2"
        android:layout_marginLeft="5dp"
        android:inputType="textWebPassword"
        android:maxLength="12"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:hint="min 5 e maximo 12 caracteres"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"/>

    <Button
        android:id="@+id/btn_salvarPerfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_novaSenha2"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_btn"
        android:text="Salvar"
        android:fontFamily="@font/robotmedium"
        android:textSize="15sp"
        android:textColor="@color/black"/>


</RelativeLayout>